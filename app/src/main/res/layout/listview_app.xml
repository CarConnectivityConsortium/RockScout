<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app_icon_background"
            android:src="@drawable/c4_launcher_icon_background"
            android:scaleType="centerCrop"
            android:tint="@color/c4_list_header_background"
            android:padding="0dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app_icon"
            android:scaleType="centerCrop"
            android:padding="0dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app_icon_mask"
            android:src="@drawable/c4_navigator_icon_mask"
            android:scaleType="fitCenter"
            android:tintMode="multiply"
            android:tint="@color/c4_list_background"
            android:padding="0dp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32dp"
        android:id="@+id/app_name"
        android:padding="12dp"
        />

</LinearLayout>

